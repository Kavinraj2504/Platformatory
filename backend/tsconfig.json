{
    "compilerOptions": {
      "target": "es2020",
       "module": "es2022",
      "rootDir": "src",
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "types": ["node"]
    },
    "include": ["src/**/*", "server.ts"],
    "exclude": ["node_modules", "dist"]
  }
  